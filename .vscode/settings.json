{
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex -> biber -> xelatex",
            "tools": [
                "xelatex",
                "biber",
                "xelatex",
            ]
        }
    ],
    "grammarly.selectors": [
        {
            "language": "latex",
            "scheme": "file",
            "pattern": "tex/mathematical-analysis.tex"
        }
    ]
}